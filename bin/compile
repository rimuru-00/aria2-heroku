#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install aria2c"
BUILD_DIR=$1
BUILDPACK_DIR=$(cd $(dirname $0); cd ..; pwd)
VENDOR_DIR="vendor"
FILE="aria2-1.37.0-linux-gnu-64bit-build1"

# Locate the aria2 file in buildpack
ARIA2_FILE="$BUILDPACK_DIR/$FILE.tar.bz2"

echo "FILE_PATH = " $ARIA2_FILE | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p aria2c
cd aria2c

# Copy the file here instead of wget
cp $ARIA2_FILE $FILE.tar.bz2

tar jxf $FILE.tar.bz2
mv $FILE/* .
rm -rf $FILE $FILE.tar.bz2

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/aria2c.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/aria2c"' >> $PROFILE_PATH
