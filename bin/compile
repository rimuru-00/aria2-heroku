#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install aria2c"
BUILD_DIR=$1
VENDOR_DIR="vendor"
FILE="aria2-1.37.0-linux-gnu-64bit-build1"
FILE_PATH="$BUILD_DIR/$FILE.tar.bz2"  # File is in the BUILD_DIR (repo root)

echo "FILE_PATH = " $FILE_PATH | indent

# Create the vendor directory structure
mkdir -p $BUILD_DIR/$VENDOR_DIR/aria2c
cd $BUILD_DIR/$VENDOR_DIR/aria2c

# Copy the file from repo root to current directory
cp $FILE_PATH .

tar jxf $FILE.tar.bz2
mv $FILE/* .
rm -rf $FILE $FILE.tar.bz2

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/aria2c.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/aria2c"' >> $PROFILE_PATH
