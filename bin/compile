#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install aria2c"
BUILD_DIR=$1
VENDOR_DIR="vendor"
FILE="aria2-1.37.0-linux-gnu-64bit-build1"
FILE_PATH="aria2-1.37.0-linux-gnu-64bit-build1.tar.bz2"

echo "FILE_PATH = " $FILE_PATH | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p aria2c
cd aria2c

# Copy the file from local path instead of downloading
cp $FILE_PATH .

tar jxf $FILE.tar.bz2
mv $FILE/* .
rm -rf $FILE $FILE.tar.bz2

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/aria2c.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/aria2c"' >> $PROFILE_PATH
